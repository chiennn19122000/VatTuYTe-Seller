<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/name_seller"
        android:text="Tên: "
        android:textSize="17sp"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:textColor="#03A9F4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/sdt_seller"
        android:text="Số điện thoại: "
        android:layout_below="@id/name_seller"
        android:layout_centerHorizontal="true"
        android:textColor="#03A9F4"
        android:textSize="17sp"
        android:layout_marginTop="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/email_seller"
        android:text="Email: "
        android:layout_below="@id/sdt_seller"
        android:layout_centerHorizontal="true"
        android:textSize="17sp"
        android:layout_marginTop="12dp"
        android:textColor="#03A9F4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/place_seller"
        android:text="Địa chỉ: "
        android:layout_below="@id/email_seller"
        android:layout_centerHorizontal="true"
        android:textColor="#03A9F4"
        android:textSize="17sp"
        android:layout_marginTop="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/company_name"
        android:text="Tên công ty: "
        android:textColor="#00BCD4"
        android:textSize="17sp"
        android:layout_marginTop="12dp"
        android:layout_below="@id/place_seller"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/company_number_phone"
        android:text="Số điện thoại công ty: "
        android:textColor="#00BCD4"
        android:layout_below="@id/company_name"
        android:layout_centerHorizontal="true"
        android:textSize="17sp"
        android:layout_marginTop="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/company_email"
        android:text="Email công ty: "
        android:textColor="#00BCD4"
        android:layout_below="@id/company_number_phone"
        android:layout_centerHorizontal="true"
        android:textSize="17sp"
        android:layout_marginTop="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/change_info"
        android:text="thay đổi thông tin"
        android:layout_below="@id/company_email"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/change_pass"
        android:text="thay đổi mật khẩu"
        android:layout_below="@id/change_info"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/logout"
        android:text="Đăng xuất"
        android:layout_below="@id/change_pass"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/exit"
        android:text="exit"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="12dp"
        android:layout_marginEnd="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>
